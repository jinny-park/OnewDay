<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CreateProfileTheme" parent="Theme.AppCompat.Light">

        <!-- 상단 Title 배경색 -->
        <item name="colorAccent">@color/pink</item>

        <!-- 선택한 날짜 배경 색 -->
        <item name="colorControlActivated">#90d5eb</item>

        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/grey</item>

        <!--Calender Background color -->
        <item name="android:colorBackground">@color/splash</item>

        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/splash</item>

        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/splash</item>

        <!--day , month TextColor-->
        <item name="android:textColorPrimaryInverse">@color/splash</item>

        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/splash</item>

        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/grey</item>

        <item name="android:textSize">20sp</item>

        <item name="cornerSize">16dp</item>

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>


    </style>
</resources>